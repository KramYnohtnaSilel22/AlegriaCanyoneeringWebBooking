@model IEnumerable<AlegriaCanyoneeringWebBooking.Models.Guest>

@{
    ViewData["Title"] = "Reserved Guests";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Reserved Guests</h2>
        <div>
            <a asp-action="Anticipate" class="btn btn-primary">
                <i class="fas fa-plus"></i> New Booking
            </a>
            <a asp-action="Accept" class="btn btn-success">
                <i class="fas fa-check-circle"></i> View Acceptable Guests
            </a>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead class="table-info">
                    <tr>
                        <th>ID</th>
                        <th>Full Name</th>
                        <th>Age</th>
                        <th>Gender</th>
                        <th>Nationality</th>
                        <th>Nat. Status</th>
                        <th>Operator ID</th>
                        <th>Date</th>
                        <th>Arrival Date</th>
                        <th>Month</th>
                        <th>Date Short</th>
                          <th>Batch</th>
                        <th>NumberOfGuest</th>
                        <th>RFID</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var guest in Model)
                    {
                        <tr>
                            <td>@guest.Id</td>
                            <td>@guest.Fullname</td>
                            <td>@guest.Age</td>
                            <td>@guest.Gender</td>
                            <td>@guest.Nationality</td>
                            <td>@guest.NatStat</td>
                            <td>@guest.Operator?.BusinessName</td>

                            <td>@guest.Date</td>
                            <td>@guest.ArrivalDate</td>
                            <td>@guest.Month</td>
                            <td>@guest.DateShort</td>
                            <th>@guest.Batch</th>
                            <th>@guest.NumberOfGuests</th>

                            <td>@guest.RFID</td>
                            <td>
                                <span class="badge bg-@(guest.BookingStatus == "anticipated" ? "info" :
                                                        guest.BookingStatus == "reserved" ? "warning" :
                                                        guest.BookingStatus == "confirmed" ? "success" : "secondary")">
                                    @guest.BookingStatus
                                </span>
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="ReserveDetails" asp-route-id="@guest.Id" class="btn btn-info btn-sm">
                                        <i class="fas fa-eye"></i> Details
                                    </a>
                                    <a asp-action="EditReserve" asp-route-id="@guest.Id" class="btn btn-warning btn-sm">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                    @if (guest.BookingStatus == "anticipated")
                                    {
                                        <form asp-action="UpdateStatus" method="post">
                                            <input type="hidden" name="id" value="@guest.Id" />
                                            <input type="hidden" name="status" value="reserved" />
                                            <button type="submit" class="btn btn-primary">Reserve</button>
                                        </form>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center">
            <i class="fas fa-exclamation-triangle fa-3x mb-3"></i>
            <h4>No Guests Found</h4>
            <p>There are no guests in the system. Create a new guest to get started.</p>
            <a asp-action="CreateGuest" class="btn btn-primary">Create First Guest</a>
        </div>
    }
</div>

        @section Styles {
            <style>
                .table th {
                    background-color: #17a2b8;
                    color: white;
                    font-weight: 600;
                }

                .btn-group .btn {
                    margin-right: 3px;
                }

                .badge {
                    font-size: 0.8em;
                    padding: 0.4em 0.6em;
                }
            </style>
        }

        @section Scripts {
            <script src="https://kit.fontawesome.com/your-fontawesome-kit.js" crossorigin="anonymous"></script>
            <script>
                $(document).ready(function() {
                    $('.table').DataTable({
                        responsive: true,
                        ordering: true,
                        searching: true,
                        pageLength: 10,
                        order: [[7, 'asc']] // Sort by Date
                    });
                });
            </script>
        }