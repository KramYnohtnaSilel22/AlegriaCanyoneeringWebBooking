@* @model IEnumerable<AlegriaCanyoneeringWebBooking.Models.Guest>

@{
    ViewData["Title"] = "Reserved Guests";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Reserved Guests</h2>
        <div>
            <a asp-action="Anticipate" class="btn btn-primary btn-lg">
                <i class="fas fa-plus"></i> New Booking
            </a>
            <a asp-action="Accept" class="btn btn-success btn-lg">
                <i class="fas fa-check-circle"></i> View Acceptable Guests
            </a>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-bordered table text-truncate">
                <thead class="table-dark text-white">
                    <tr>
                        <th>ID</th>
                        <th>Full Name</th>
                        <th>Age</th>
                        <th>Gender</th>
                        <th>Nationality</th>
                        <th>Nat. Status</th>
                        <th>Operator</th>
                        <th>Date</th>
                        <th>Arrival Date</th>
                        <th>Month</th>
                        <th>Date Short</th>
                        <th>Batch</th>
                        <th>Number of Guests</th>
                        <th>RFID</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var guest in Model)
                    {
                        <tr>
                            <td>@guest.Id</td>
                            <td>@guest.Fullname</td>
                            <td>@guest.Age</td>
                            <td>@guest.Gender</td>
                            <td>@guest.Nationality</td>
                            <td>@guest.NatStat</td>
                            <td>@guest.Operator?.BusinessName</td>
                            <td>@guest.Date</td>
                            <td>@guest.ArrivalDate</td>
                            <td>@guest.Month</td>
                            <td>@guest.DateShort</td>
                            <td>@guest.Batch</td>
                            <td>@guest.NumberOfGuests</td>
                            <td>@guest.RFID</td>
                            <td>
                                <span class="badge bg-@(guest.BookingStatus == "anticipated" ? "info" :
                                                                guest.BookingStatus == "reserved" ? "warning" :
                                                                guest.BookingStatus == "confirmed" ? "success" : "secondary")">
                                    @guest.BookingStatus
                                </span>
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="ReserveDetails" asp-route-id="@guest.Id" class="btn btn-outline-info btn-sm">
                                        <i class="fas fa-eye"></i> Details
                                    </a>
                                    <a asp-action="EditReserve" asp-route-id="@guest.Id" class="btn btn-outline-warning btn-sm">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                    @if (guest.BookingStatus == "anticipated")
                                    {
                                        <form asp-action="UpdateStatus" method="post" style="display:inline;">
                                            <input type="hidden" name="id" value="@guest.Id" />
                                            <input type="hidden" name="status" value="reserved" />
                                            <button type="submit" class="btn btn-outline-primary btn-sm">
                                                <i class="fas fa-check"></i> Reserve
                                            </button>
                                        </form>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="card shadow-sm border-warning">
            <div class="card-body text-center py-5">
                <i class="fas fa-exclamation-triangle fa-3x mb-3"></i>
                <h4 class="card-title">No Guests Found</h4>
                <p class="card-text">There are no guests in the system. Create a new guest to get started.</p>
            </div>
        </div>
    }
</div>

@section Styles {
    <style>
        .table th {
            background-color: #2c3e50;
            color: white;
            font-weight: 600;
        }

        .table td,
        .table th {
            vertical-align: middle;
            text-align: center;
        }

        .table tbody tr:hover {
            background-color: #f1f1f1;
            cursor: pointer;
        }

        .btn-group .btn {
            margin-right: 5px;
        }

        .badge {
            font-size: 0.9em;
            padding: 0.4em 0.8em;
        }

        .alert-warning {
            background-color: #fff3cd;
            border-color: #ffeeba;
        }

        .btn-lg {
            font-size: 1.125rem;
            padding: 10px 20px;
        }

        .btn-sm {
            font-size: 0.875rem;
            padding: 5px 10px;
        }

        .btn-outline-info, .btn-outline-warning, .btn-outline-primary {
            border-width: 2px;
        }

        .btn:hover {
            opacity: 0.9;
        }
    </style>
}

@section Scripts {
    <script src="https://kit.fontawesome.com/your-fontawesome-kit.js" crossorigin="anonymous"></script>
    <script>
        $(document).ready(function() {
            $('.table').DataTable({
                responsive: true,
                ordering: true,
                searching: true,
                pageLength: 10,
                order: [[7, 'asc']] // Sort by Date
            });
        });
    </script>
}
 *@