@model IEnumerable<AlegriaCanyoneeringWebBooking.Models.Guest>

@{
    ViewData["Title"] = "Guest List";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Guests</h2>
        <span class="badge bg-primary">@Model.Count() Guests Found</span>
    </div>

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Guest ID</th>
                        <th>Full Name</th>
                        <th>Age</th>
                        <th>Gender</th>
                        <th>Nationality</th>
                        <th>Nat. Status</th>
                        <th> BusinessName</th>
                        <th>RFID</th>
                        <th>Arrival Date</th>
                        <th>Month</th>
                        <th>Batch</th>
                        <th>No. of Guests</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>

                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Fullname</td>
                            <td>@item.Age</td>
                            <td>@item.Gender</td>
                            <td>@item.Nationality</td>
                            <td>@item.NatStat</td>
                            <td>@item.Operator.BusinessName</td>
                            <td>@item.RFID</td>
                            <td>@item.ArrivalDate</td>
                            <td>@item.Month</td>
                            <td>@item.Batch</td>
                            <td>@item.NumberOfGuests</td>
                            <td>
                                <span class="badge @(item.BookingStatus == "anticipated" ? "bg-warning" : "bg-success")">
                                    @item.BookingStatus
                                </span>
                            </td>
                            <td>

                                <div class="btn-group" role="group">
                                    <a asp-action="ScanQR" asp-route-id="@item.Id" class="btn btn-success btn-sm">
                                        <i class="fas fa-qrcode"></i> Scan QR
                                    </a>
                                    <a asp-action="ReserveDetails" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                                        <i class="fas fa-eye"></i> Details
                                    </a>
                                </div>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            <i class="fas fa-info-circle fa-3x mb-3"></i>
            <h4>No Guests Found</h4>
            <p>No guest records are available in the system.</p>
            <a asp-action="CreateGuest" class="btn btn-primary">Add New Guest</a>
        </div>
    }
</div>

<!-- QR Modal -->
<div class="modal fade" id="qrModal" tabindex="-1">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">QR Code</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body text-center">
                <img id="modalQRImage" src="" alt="QR Code" class="img-fluid" />
                <p id="modalQRGuest" class="mt-2"></p>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .table th {
            background-color: #2c3e50;
            color: white;
            font-weight: 600;
        }

        .btn-group .btn {
            margin-right: 5px;
        }

        .badge {
            font-size: 0.9em;
        }
    </style>
}

@section Scripts {
    <script src="https://kit.fontawesome.com/your-fontawesome-kit.js" crossorigin="anonymous"></script>
    <script>
        function showQRCode(qrCode, guestName) {
            document.getElementById('modalQRImage').src = qrCode;
            document.getElementById('modalQRGuest').textContent = guestName;
            new bootstrap.Modal(document.getElementById('qrModal')).show();
        }

        $(document).ready(function () {
            $('.table').DataTable({
                responsive: true,
                ordering: true,
                searching: true,
                pageLength: 10,
                order: [[0, 'asc']] // Sort by Guest ID
            });
        });
    </script>
}